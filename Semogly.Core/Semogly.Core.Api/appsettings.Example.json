{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=local_db;Username=local_user;Password=local_password"
  },

  "Jwt": {
    "Issuer": "Semogly.Core.API",
    "Audience": "Semogly.Core.Web",
    "Key": "SuperSecretKey",
    "AccessTokenExpirationMinutes": 5
  },

  "Redis": {
    "Connection": "localhost:6379",
    "RefreshTokenPrefix": "refresh_token:"
  },

  "Secrets": {
    "PasswordSaltKey": "SuperSecretKey",
    "SaltSize": 16,
    "KeySize": 32,
    "Iterations": 1000,
    "SplitChar": ".",
    "RefreshTokenSecret": "SuperSecretKey"
  },

  "MediatR": {
    "LicenseKey": "SuperSecretKey"
  }
}
