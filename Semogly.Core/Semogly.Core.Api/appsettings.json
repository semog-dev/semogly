{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Redis": {
    "RefreshTokenPrefix": "refresh_token:"
  },

  "KeyVaultURI": "https://semoglykeys.vault.azure.net/",

  "Jwt": {
    "Issuer": "Semogly.Core.API",
    "Audience": "Semogly.Core.Web",
    "AccessTokenExpirationMinutes": 1
  },

  "Secrets": {
    "SaltSize": 16,
    "KeySize": 32,
    "Iterations": 1000,
    "SplitChar": "."
  }
}
